//declaring they two numbers
$misteryNumber = 32;
$myNumber = 32;

//CONGRATS when they are equal, "+" when $myNumber is lesser, else sends "-"
echo ($misteryNumber === $myNumber) ? ("<strong>Congrats</strong>") : (($myNumber < $misteryNumber) ? "<strong>➕</strong>" : "<strong>➖</strong>") ;
